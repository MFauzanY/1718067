<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bgcolor" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/langit" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fauzan Yunianto"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginTop="170dp"
                    />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="186dp"
                    android:layout_height="129dp"
                    android:layout_marginStart="0dp"
                    android:src="@drawable/fotoku" />
            </FrameLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_heart"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="21sp"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawablePadding="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="@android:color/black" />


            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/store"
                android:textSize="25dp"
                android:drawableStart="@drawable/ic_store_black_24dp"
                android:drawablePadding="20dp"
                android:layout_marginTop="125dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="@android:color/black" />



            <TextView
                android:id="@+id/tv_chat"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/devicephone"
                android:textSize="25sp"
                android:drawableStart="@drawable/ic_phone_iphone_black_24dp"
                android:drawablePadding="20dp"
                android:layout_marginTop="210dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/contact"
                android:textSize="25sp"
                android:drawableStart="@drawable/ic_contacts_black_24dp"
                android:drawablePadding="20dp"
                android:layout_marginTop="290dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="350dp"
                android:background="@drawable/langit"/>


        </RelativeLayout>
    </LinearLayout>
</ScrollView>
